#############################################################################################
#####################################
#        BLAST (v2.7.1+) options    #
#####################################
# BLASTN
#Expectation value (E) [Real]
-evalue 1e-05
#Number of processors to use [Integer] (do not modify this value !)
-num_threads 1
#Filter query sequence with DUST
-dust yes
#Apply filtering locations as soft masks
-soft_masking true
#Maximum number of aligned sequences to keep
-max_target_seqs 5000
# Ouput format (do not modify this value !)
-outfmt "6 qseqid sseqid qstart qend qlen sstart send slen pident evalue"
#END
